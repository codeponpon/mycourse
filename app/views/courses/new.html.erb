<%= render partial: 'partials/breadcrumb' %>

<div class="container">
  <div class="card">
    <div class="card-header">
      <%= action_name.capitalize %>
    </div>
    <div class="card-block">
      <%= form_with model: @course do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= f.text_field :description, class: 'form-control' %>
          </div>
        </div>


        <div class="form-group row">
          <%= f.label :category, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= f.text_field :category, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :subject, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= f.text_field :subject, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :start_date, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= f.date_select :start_date, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :end_date, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= f.date_select :end_date, class: 'form-control' %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Submit", class: 'btn btn-sm btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>