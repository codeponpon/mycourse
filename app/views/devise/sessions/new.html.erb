<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mx-2">
      <div class="card p-2">
        <div class="card-block">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h1>Login</h1>
            <p class="text-muted">Sign In to your account</p>
            <div class="input-group mb-1">
              <span class="input-group-addon"><%= icon('user') %></span>
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="input-group mb-2">
              <span class="input-group-addon"><%= icon('lock') %></span>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
            </div>
            <div class="row">
              <div class="col-6">
                <%= f.submit "Log in", class: 'btn btn-primary px-2' %>
              </div>
              <div class="col-6 text-right">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'btn btn-link px-0' %><br />
                <% end -%>
              </div>
              <div class="card-block text-center">
                <div class="actions">
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-primary btn-block ' %><br />
                  <% end -%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>